
require_relative '../lib/move.rb'

puts "Welcome to Tic Tac Toe!"

board = [" ", " ", " "," ", " ", " "," ", " ", " "]

puts "Where would you like to go?"
input = gets.strip

index = input_to_index(input)

def update_array_at_with(board, index, value)
board[index] = value
end

update_array_at_with(board, index, value="X")

display_board(board)
